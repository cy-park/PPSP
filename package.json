  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cy-park/PPSP/issues"
  },
  "homepage": "https://github.com/cy-park/PPSP#readme",
  "devDependencies": {
    "http-server": "^0.9.0",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "quietwheel": "^0.1.1",
    "slide-scroll": "0.0.2"
  }
